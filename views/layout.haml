%html
  %head
    %title
      Boardwalk Control Center ::
      -if @title
        = @title
    %script{:language => 'javascript', :src => '/js/jquery.js'}
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/css/control.css'}
    :plain
      #{@plain||=''}
  %body
    #page
      -if session[:user] && current_user
        .menu
          %ul
            %li
              %a{:href => '/control/buckets'}
                Buckets
            -if current_user and current_user.superuser
              %li
                %a{:href => '/control/users'}
                  Users
            %li
              %a{:href => '/control/profile'}
                Profile
            %li
              %a{:href => '/control/logout'}
                Logout&nbsp;
      .header
        %h1
          Boardwalk
        %h2
          -if @title
            = @title
      .content
        = yield
